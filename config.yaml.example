# Synology Space Analyzer - Beispiel-Konfigurationsdatei
# Kopiere diese Datei zu config.yaml und passe die Werte an deine Umgebung an
# 
# WICHTIG: config.yaml wird von Git ignoriert und enthält sensible Daten!
# 
# Hinweis: Die SQLite-Datenbank (history.db) wird automatisch im data/ Verzeichnis
# im Projekt-Root erstellt und ist in der .gitignore hinterlegt.

scans:
  # Beispiel 1: Scan einer kompletten Freigabe
  - name: "example_share_scan"
    nas:
      host: "nas.example.com"              # Hostname oder IP-Adresse des NAS
      username: "api-user"                  # Benutzername für API-Zugriff
      password: "Dein-Passwort-Hier"       # Passwort (wird in Git ignoriert)
      port: null                            # Optional: Port (null = automatisch: 5001 für HTTPS, 5000 für HTTP)
      use_https: true                       # Ob HTTPS verwendet werden soll (true = HTTPS, false = HTTP)
      verify_ssl: false                     # SSL-Zertifikat-Verifizierung (false für selbst-signierte Zertifikate)
    share: "share1"                        # Name der Freigabe
    folder: null                            # Optional: spezifischer Ordner innerhalb der Freigabe
    path: null                              # Optional: vollständiger Pfad (z.B. "homes/user1/Documents")
    interval: "0 */6 * * *"                 # Cron-Format: alle 6 Stunden (Minute Stunde Tag Monat Wochentag)
                                             # Alternative: "6h" für einfaches Interval-Format
    enabled: true                           # Scan aktivieren/deaktivieren
  
  # Beispiel 2: Scan mit explizitem Port
  - name: "home_homes"
    nas:
      host: "192.168.1.100"
      username: "api-user"
      password: "Dein-Passwort-Hier"
      port: 5001                            # Expliziter Port (5001 für HTTPS, 5000 für HTTP)
      use_https: true                        # HTTPS verwenden
      verify_ssl: false
    share: "homes"
    folder: null
    path: null
    interval: "0 2 * * *"                  # Täglich um 2 Uhr
    enabled: true

  # Beispiel 3: Scan eines spezifischen Ordners innerhalb einer Freigabe
  - name: "backup_daily"
    nas:
      host: "192.168.1.101"
      username: "backup_user"
      password: "Dein-Passwort-Hier"
      port: null                            # Automatisch basierend auf use_https
      use_https: true                       # HTTPS verwenden
      verify_ssl: true                      # SSL-Verifizierung aktiviert
    share: "backup"
    folder: "daily"                         # Nur der "daily" Ordner innerhalb "backup"
    path: null
    interval: "0 3 * * *"                  # Täglich um 3 Uhr
    enabled: true

  # Beispiel 4: Scan mit vollständigem Pfad
  - name: "user_documents"
    nas:
      host: "nas.example.com"
      username: "api-user"
      password: "Dein-Passwort-Hier"
      port: null
      use_https: true                       # HTTPS verwenden
      verify_ssl: true
    share: null                             # Nicht benötigt wenn path verwendet wird
    folder: null                            # Nicht benötigt wenn path verwendet wird
    path: "backup/project1/data"           # Vollständiger Pfad
    interval: "*/30 * * * *"                # Alle 30 Minuten (Cron-Format)
                                             # Alternative: "30m" für einfaches Interval-Format
    enabled: true

  # Beispiel 5: HTTP-Verbindung (ohne SSL/TLS)
  - name: "http_scan"
    nas:
      host: "192.168.1.100"
      username: "api-user"
      password: "Dein-Passwort-Hier"
      port: 5000                            # Port 5000 für HTTP
      use_https: false                      # HTTP verwenden (kein SSL/TLS)
      verify_ssl: false                     # Nicht relevant bei HTTP, aber muss gesetzt werden
    share: "public"
    folder: null
    path: null
    interval: "0 4 * * *"                  # Täglich um 4 Uhr
    enabled: true

  # Beispiel 6: Deaktivierter Scan (wird nicht ausgeführt)
  - name: "disabled_scan"
    nas:
      host: "192.168.1.100"
      username: "user"
      password: "Dein-Passwort-Hier"
      port: null
      use_https: true
      verify_ssl: false
    share: "test"
    folder: null
    path: null
    interval: "0 0 * * *"                  # Täglich um Mitternacht
    enabled: false                          # Scan ist deaktiviert

  # Beispiel 7: Scan mit einfachem Interval-Format (statt Cron)
  - name: "frequent_scan"
    nas:
      host: "192.168.1.100"
      username: "api-user"
      password: "Dein-Passwort-Hier"
      port: null
      use_https: true
      verify_ssl: false
    share: "monitoring"
    folder: null
    path: null
    interval: "30m"                        # Alle 30 Minuten (einfaches Interval-Format)
                                           # Alternative Cron-Format: "*/30 * * * *"
    enabled: true

# Interval-Format Erklärung:
#
# Das System unterstützt zwei Formate für Intervalle:
#
# 1. CRON-FORMAT (Standard Cron-Syntax):
# ┌───────────── Minute (0 - 59)
# │ ┌───────────── Stunde (0 - 23)
# │ │ ┌───────────── Tag des Monats (1 - 31)
# │ │ │ ┌───────────── Monat (1 - 12)
# │ │ │ │ ┌───────────── Wochentag (0 - 6) (Sonntag = 0)
# │ │ │ │ │
# * * * * *
#
# Cron-Beispiele:
# "0 0 * * *"     - Täglich um Mitternacht
# "0 */6 * * *"   - Alle 6 Stunden
# "*/30 * * * *"  - Alle 30 Minuten
# "0 2 * * 1"     - Jeden Montag um 2 Uhr
# "* * * * *"     - Jede Minute (nur für Tests!)
#
# 2. INTERVAL-FORMAT (Einfaches Format):
# Einfache Angabe mit Zahl und Einheit (s = Sekunden, m = Minuten, h = Stunden, d = Tage)
#
# Interval-Beispiele:
# "30s"           - Alle 30 Sekunden
# "5m"            - Alle 5 Minuten
# "1h"            - Alle 1 Stunde
# "6h"            - Alle 6 Stunden
# "1d"            - Alle 1 Tag (täglich)
# "12h"           - Alle 12 Stunden